<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:soundEffectsEnabled="true"
    tools:context=".StopWatch">

    <LinearLayout
        android:id="@+id/chrono_and_laps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <omegacentauri.mobi.simplestopwatch.BigTextView
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0sp"
            android:textSize="50sp"
            />

        <TextView
            android:id="@+id/laps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:maxLines="3"
            android:textSize="14sp"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:layout_above="@+id/controlBar"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:gravity="bottom"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/oval"
            android:onClick="onButtonStart"
            android:text="Start"
            android:textColor="@android:color/white"
            android:hapticFeedbackEnabled="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oval"
            android:onClick="onButtonReset"
            android:text="Reset"
            android:textColor="@android:color/white"
            android:hapticFeedbackEnabled="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fraction"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:maxLines="1"
            android:gravity="center"
            android:text=".0"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <ImageButton
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:enabled="false"
            android:background="@null"
            android:src="@drawable/lock" />

        <ImageButton
            android:id="@+id/current_stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@null"
            android:onClick="setCurrentStopwatch"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/s1" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@null"
            android:onClick="onButtonSettings"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="onButtonMenu"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/menu" />

    </LinearLayout>

</RelativeLayout>